<?xml version="1.0"?>
<ewg_config name="libyaml">

  <rule_list>
    
	  <!-- Ignore everything that starts with an underscore. -->
    <rule>
      <match>
          <identifier name="_.*"/>  
      </match>
       <wrapper type="none">
      </wrapper>
    </rule>


    	<!-- Include Yaml get version -->
    <rule>
       <match>
           <identifier name="yaml_get_version.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule>


    	<!-- Include Yaml parser -->
    <rule>
       <match>
           <identifier name="yaml_parser.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule>

	<!--  Include yaml_event_* -->
    <rule>
       <match>
           <identifier name="yaml_event.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule>

	<!--  Include yaml_token_* -->
    <rule>
       <match>
           <identifier name="yaml_token.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule>


	<!--   Include yaml_document_* -->
    <rule>
       <match>
           <identifier name="yaml_document_.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule> 

	<!--   Include yaml_emitter_* -->
    <rule>
       <match>
           <identifier name="yaml_emitter_.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule> 

	<!--   Include yaml_stream_* -->
    <rule>
       <match>
           <identifier name="yaml_stream_.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule> 

	<!--   Include yaml_alias_* -->
    <rule>
       <match>
           <identifier name="yaml_alias_.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule> 

	<!--   Include yaml_scalar_* -->
    <rule>
       <match>
           <identifier name="yaml_scalar_.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule> 

	<!--   Include yaml_sequence_* -->
    <rule>
       <match>
           <identifier name="yaml_sequence_.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule> 

	<!--   Include yaml_mapping_* -->
    <rule>
       <match>
           <identifier name="yaml_mapping_.*"/>
       </match>
       <wrapper type="default">
      </wrapper>
    </rule> 


 
	  <!-- And the rest should be ignored -->
    <rule>
      <match>
      </match>
       <wrapper type="none">
      </wrapper>
    </rule>
  </rule_list>
</ewg_config>
